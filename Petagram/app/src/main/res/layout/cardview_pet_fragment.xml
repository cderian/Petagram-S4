<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewPet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_marginBottom="@dimen/cardview_margin"
    card_view:cardCornerRadius="@dimen/cardview_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgPetCdVw"
            android:layout_width="@dimen/cardview_image"
            android:layout_height="@dimen/cardview_image"
            android:src="@drawable/logo_pet"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="4dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtRatePetCdVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="@string/cardview_like"
                android:textSize="@dimen/cardview_text"
                android:textColor="@color/colorAccent"/>

            <ImageView
                android:id="@+id/imgRate"
                android:layout_width="25dp"
                android:layout_height="@dimen/cardview_image_like"
                android:layout_marginTop="30dp"
                android:layout_gravity="end"
                android:background="@drawable/hueso_amarillo" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>